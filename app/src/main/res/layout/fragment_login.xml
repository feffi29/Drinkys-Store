<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thema"
    tools:context=".view.iu.activities.MainActivity">


    <EditText
        android:id="@+id/inputUser"
        android:layout_width="242dp"
        android:layout_height="41dp"
        android:background="@drawable/borde_edit_text"
        android:ems="10"
        android:hint="Email or Username"
        android:inputType="textPersonName|text|textEmailAddress"
        android:textColorHint="#AFABAB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="360dp" />

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="242dp"
        android:layout_height="41dp"
        android:background="@drawable/borde_edit_text"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#AFABAB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="415dp" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="101dp"
        android:layout_height="39dp"
        android:background="@drawable/border_button_sn"
        android:text="SIGN IN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="481dp" />


</androidx.constraintlayout.widget.ConstraintLayout>